@model List<UniversityExaminationMVC.Models.CheckModel>
@{
    ViewBag.Title = "AddQuestion";
}

<h2>AddQuestion</h2>
<div class="container">
    @using (Html.BeginForm())
    {
        for (var i = 0; i < Model.Count(); i++)
        {
            <table>
                <tr>
                    <td>
                        @Html.HiddenFor(it => it[i].Id)
                        @Html.DisplayFor(it => it[i].Name)
                    </td>
                    <td>
                        @Html.CheckBoxFor(it => it[i].check, new { Style = "vertical-            align:3px}" })
                    </td>
                </tr>
            </table>

        }
        <br />
        <input id="Submit1" class="btn btn-dark" type="submit" value="submit" />
    }
</div>
