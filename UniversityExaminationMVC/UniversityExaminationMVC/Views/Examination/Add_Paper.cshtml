@model List<UniversityExaminationMVC.Models.CheckModelPaper>
@{
    ViewBag.Title = "Add_Paper";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card border-dark">
    <div class="card-header text-dark"><h2>Add Paper</h2></div>
    <div class="card-body text-dark">
        @using (Html.BeginForm())
        {
            for (var i = 0; i < Model.Count(); i++)
            {
                <table class="text-dark">
                    <tr>
                        <td>
                            @Html.HiddenFor(it => it[i].Id)
                            @Html.DisplayFor(it => it[i].Name)
                            @Html.DisplayFor(it => it[i].Date)
                        </td>
                        <td>
                            @Html.CheckBoxFor(it => it[i].check, new { Style = "vertical-            align:3px}" })
                        </td>
                    </tr>
                </table>

            }
            <br /><br />
            <input id="Submit1" class="btn btn-dark" type="submit" value="submit" />
        }
    </div>
</div>

